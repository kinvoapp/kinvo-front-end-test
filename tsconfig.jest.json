{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "declaration": true,
    "esModuleInterop": true,
    "noResolve": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "paths": {
      "@*": ["./src/*"],
      "@services*": ["./services/*"]
    }
  },
  "include": ["./src/**/*"]
}
